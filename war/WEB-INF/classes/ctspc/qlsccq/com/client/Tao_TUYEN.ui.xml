<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.panel_input {
		width: 360px;
		padding: 3px;
		vertical-align: middle;
		border: 1px;
	}
	
	.panel_title {
		background: #F44336;
		padding: 10px;
		vertical-align: middle;
		border: 1px;
	}
	
	.panel_large_title {
		background: #F44336;
		padding: 10px;
		vertical-align: middle;
	}
	
	.large_title {
		font-size: larger;
		color: #FFFFFF;
		font-weight: bolder;
	}
	
	.label {
		width: 150px;
		font-size: medium;
	}
	
	.label_long {
		width: 400px;
		font-size: medium;
	}
	
	.input {
		width: 500px;
		padding: 5px 4px;
		border: 1px solid #ccc;
		border-top: 1px solid #999;
		font-size: large;
		font-family: Arial Unicode MS, Arial, sans-serif;
	}
	
	.button {
		width: 200px;
		font-size: large;
	}
	
	.pane {
		text-align: center;
	}
	
	.box {
		padding: 20px;
	}
	
	.button {
		background-color: #eeeeee;
		background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #eeeeee),
			color-stop(100%, #cccccc));
		background-image: -webkit-linear-gradient(top, #eeeeee, #cccccc);
		background-image: -moz-linear-gradient(top, #eeeeee, #cccccc);
		background-image: -ms-linear-gradient(top, #eeeeee, #cccccc);
		background-image: -o-linear-gradient(top, #eeeeee, #cccccc);
		background-image: linear-gradient(top, #eeeeee, #cccccc);
		border: 1px solid #ccc;
		border-bottom: 1px solid #bbb;
		-webkit-border-radius: 3px;
		-moz-border-radius: 3px;
		-ms-border-radius: 3px;
		-o-border-radius: 3px;
		border-radius: 3px;
		color: #333;
		font: bold 11px "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans",
			Geneva, Verdana, sans-serif;
		line-height: 1;
		padding: 0px 0;
		text-align: center;
		text-shadow: 0 1px 0 #eee;
		width: 120px;
	}
	
	.button:hover {
		background-color: #dddddd;
		background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #dddddd),
			color-stop(100%, #bbbbbb));
		background-image: -webkit-linear-gradient(top, #dddddd, #bbbbbb);
		background-image: -moz-linear-gradient(top, #dddddd, #bbbbbb);
		background-image: -ms-linear-gradient(top, #dddddd, #bbbbbb);
		background-image: -o-linear-gradient(top, #dddddd, #bbbbbb);
		background-image: linear-gradient(top, #dddddd, #bbbbbb);
		border: 1px solid #bbb;
		border-bottom: 1px solid #999;
		cursor: pointer;
		text-shadow: 0 1px 0 #ddd;
	}
	
	.button:active {
		border: 1px solid #aaa;
		border-bottom: 1px solid #888;
		-webkit-box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee;
		-moz-box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee;
		box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee;
	}
	
	.combo {
		font-weight: bold;
		font-size: medium;
		width: 200px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div align="center">
			<g:ScrollPanel>
				<g:VerticalPanel width="100%" height="100%">
					<g:VerticalPanel styleName="{style.panel_large_title}"
						horizontalAlignment="ALIGN_CENTER" width="100%">
						<g:Label text="TẠO TUYẾN MỚI" styleName="{style.large_title}" />
					</g:VerticalPanel>
					<g:VerticalPanel width="100%">
							<g:HorizontalPanel styleName="{style.panel_input}">
								<g:Label styleName="{style.label}" text="MÃ  TUYẾN" />
								<g:TextBox styleName="{style.input}" ui:field="edt_MATUYEN" />
							</g:HorizontalPanel>
							<g:HorizontalPanel styleName="{style.panel_input}">
								<g:Label text="TÊN TUYẾN" styleName="{style.label}" />
								<g:TextBox styleName="{style.input}" ui:field="edt_TENTUYEN" />
							</g:HorizontalPanel>
							<g:HorizontalPanel styleName="{style.panel_input}">
								<g:Label text="CHIỀU DÀI" styleName="{style.label}" />
								<g:TextBox styleName="{style.input}" ui:field="edt_CHIEUDAI" />
							</g:HorizontalPanel>
							<g:HorizontalPanel styleName="{style.panel_input}">
								<g:Label text="THÔNG TIN SỢI" styleName="{style.label}" />
								<g:TextBox styleName="{style.input}" ui:field="edt_TT_SOI"/>
							</g:HorizontalPanel>
							<g:HorizontalPanel styleName="{style.panel_input}">
								<g:Label text="TRẠM ĐẦU" styleName="{style.label}" ui:field="TV_MANGXONG" />
								<g:ListBox styleName="{style.input}" ui:field="cbx_TRAMDAU" />
							</g:HorizontalPanel>
							<g:HorizontalPanel styleName="{style.panel_input}">
								<g:Label text="TRẠM CUỐI" styleName="{style.label}" />
								<g:ListBox styleName="{style.input}" ui:field="cbx_TRAMCUOI"  />
							</g:HorizontalPanel>
							<g:HorizontalPanel styleName="{style.panel_input}">
								<g:Label text="LOẠI CÁP" styleName="{style.label}" />
								<g:ListBox styleName="{style.input}" ui:field="cbx_LOAICAP"  />
							</g:HorizontalPanel>
						</g:VerticalPanel>
					<g:HorizontalPanel width="100%">
						<g:VerticalPanel styleName="{style.box}" width="100%"
							horizontalAlignment="ALIGN_RIGHT">
							<g:SimplePanel styleName="{style.button}" width="150px"
								ui:field="pane_trolai">
								<g:HTMLPanel ui:field="pane_huy">
									<table align="center">
										<tr>
											<td>
												<g:Image styleName="{style.pane}" url="back.png"></g:Image>
											</td>
											<td>
												<g:Label text="HUỶ BỎ">Image buttom</g:Label>
											</td>
										</tr>
									</table>
								</g:HTMLPanel>
							</g:SimplePanel>
						</g:VerticalPanel>
						<g:VerticalPanel styleName="{style.box}" width="100%"
							horizontalAlignment="ALIGN_LEFT">
							<g:SimplePanel styleName="{style.button}" width="150px"
								ui:field="pane_hoantat">
								<g:HTMLPanel>
									<table align="center">
										<tr>
											<td>
												<g:Image styleName="{style.pane}" url="finish.png"></g:Image>
											</td>
											<td>
												<g:Label text="HOÀN TẤT" ui:field="tv_hoantat">Image buttom</g:Label>
											</td>
										</tr>
									</table>
								</g:HTMLPanel>
							</g:SimplePanel>
						</g:VerticalPanel>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:ScrollPanel>


		</div>


	</g:HTMLPanel>
</ui:UiBinder> 